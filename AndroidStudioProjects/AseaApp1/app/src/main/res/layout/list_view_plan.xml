<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:background="@drawable/list_row_selector_plan"
android:padding="8dp" >

<!-- Thumbnail Image -->
<!--<com.android.volley.toolbox.NetworkImageView
    android:id="@+id/thumbnail"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_alignParentLeft="true"
    android:layout_marginRight="8dp" />-->

<!-- Movie Title -->
<TextView
    android:id="@+id/namePlan"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="@dimen/name_plan"
    android:textStyle="bold" />

<!-- description -->
<TextView
    android:id="@+id/descriptionPlan"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/namePlan"
    android:layout_marginTop="5dp"

    android:textSize="@dimen/description_plan" />

<!-- price -->
<TextView
    android:id="@+id/pricePlan"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:textColor="@color/price"
    android:textSize="@dimen/price_plan" />

</RelativeLayout>
